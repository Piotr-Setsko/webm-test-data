doctype html
html
  head
    include components/head/head
  body
    include components/header/header

  mixin list(items)
    ul.breadcrumbs
      each item, index in items
        li._item(class= (items.length === index + 1) ? 'breadcrumbs__item--last' : false )
          a(href=item.href)= item.text

  +list(data.breadcrumbs)

  aside
    include components/form-search/form-search

  main
    h2.title.is-3 #{data.page_meta.h1}
    include components/pagination/pagination

    .sort
      p._title Sort by
      select(size="1" name="Sort options")._input
        option(disabled selected) Sort options
        option(value="track") Track

    include components/card/card






